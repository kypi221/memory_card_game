<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <include layout="@layout/layout_header"></include>

    <LinearLayout
        android:layout_width="1440px"
        android:layout_height="643px"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mời bạn chọn cấp độ"
            android:textColor="@color/black"
            android:textSize="100px"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="1151px"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_level_1"
                android:layout_width="0dp"
                android:layout_height="60px"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                android:background="#bfbfbf"
                android:text="Cấp độ 1"
                android:textSize="30px" />

            <Button
                android:id="@+id/btn_level_2"
                android:layout_width="0dp"
                android:layout_height="60px"
                android:layout_marginLeft="20px"
                android:layout_weight="1"
                android:background="#bfbfbf"
                android:text="Cấp độ 2"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1151px"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_level_3"
                android:layout_width="0dp"
                android:layout_height="60px"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                android:background="#bfbfbf"
                android:text="Cấp độ 3"
                android:textSize="30px" />

            <Button
                android:id="@+id/btn_level_4"
                android:layout_width="0dp"
                android:layout_height="60px"
                android:layout_marginLeft="20px"
                android:layout_weight="1"
                android:background="#bfbfbf"
                android:text="Cấp độ 4"
                android:textSize="30px" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="1151px"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginBottom="40px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_level_5"
                android:layout_width="0dp"
                android:layout_height="60px"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                android:background="#bfbfbf"
                android:text="Cấp độ 5"
                android:textSize="30px" />

            <Button
                android:id="@+id/btn_level_6"
                android:layout_width="0dp"
                android:visibility="invisible"
                android:layout_height="60px"
                android:layout_marginLeft="20px"
                android:layout_weight="1"
                android:background="#bfbfbf"
                android:text="Cấp độ 6"
                android:textSize="30px" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_start_game"
        android:layout_width="547px"
        android:layout_height="60px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80px"
        android:background="#bfbfbf"
        android:text="Chọn"
        android:textSize="30px" />

</LinearLayout>